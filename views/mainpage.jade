extends layout

block meta
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge")
	meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		
block append styles
	link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
	link(rel='stylesheet', type='text/css', href='/font-awesome-4.7.0/font-awesome-4.7.0/css/font-awesome.min.css')

block append scripts
	script(src='./mainpage.js')
	
block content
	#page-wrap
		.col-xs-3.sidenav
			ul.list-group.sidenav-menu
				button.list-group-item(type='button') Appetizers
				button.list-group-item(type='button') Mains
				button.list-group-item(type='button') Desserts
				button.list-group-item(type='button') Drinks
		.col-xs-9.main-content
			div.featuredDish.well
				img.featuredDish-img(src=mainDish.image)
				.featuredDish-title #{mainDish.title}
				div.featuredDish-info
					span.col-xs-9.featuredDish-description #{mainDish.description}
					span.col-xs-3.featuredDish-price #{mainDish.price}
					
			div.container-fluid.otherDishes
				for dish in otherDishes
					.row.otherDish-info
						.col-xs-6
							img.otherDish-img(src=dish.image)
						.col-xs-6.otherDish-words
							.otherDish-title #{dish.title}
							.otherDish-price #{dish.price}
							//- .otherDish-description #{dish.description}
							.buybtn
								+generateBuyButton()
							
							
mixin generateBuyButton()
	.input-group
		span.input-group-btn
			button.btn.btn-default.btn-number(type='button', disabled='disabled', data-type='minus', data-field='quant[1]')
				span.glyphicon.glyphicon-minus
		input.form-control.input-number(type='text', name='quant[1]', value='1', min='1', max='10')
		span.input-group-btn
			button.btn.btn-default.btn-number(type='button', data-type='plus', data-field='quant[1]')
				span.glyphicon.glyphicon-plus
